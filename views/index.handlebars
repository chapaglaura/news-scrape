<section class="navigation">
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
        <a class="navbar-brand" href="/">NEWS SCRAPER</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="#">Saved Articles</a>
                <button class="btn btn-warning scrape-articles">Scrape new articles!</button>
                <button class="btn btn-secondary clear-articles">Clear articles!</button>
            </div>
        </div>
    </nav>
</section>

<section class="main-banner-section">
    <div class="jumbotron banner d-flex flex-column justify-content-center align-items-center">
        <h1 class="display-2">NEWS SCRAPER!</h1>
        <h3>DAILY MAIL UK News Edition</h3>
    </div>
</section>

<section class="article-section">
    <div class="container article-container">
        {{#each article}}
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-9 col-lg-10 col-xl-11">
                <div class="article-info" data-toggle="modal" data-target="#commentModal" data-id={{_id}}>
                    <h3 class="article-headline">{{title}}</h3>
                    <p class="article-summary">{{summary}}</p>
                </div>
                <a class="article-link" href={{link}}>Go to article</a>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-2 col-xl-1">
                <button class="btn btn-secondary article-button" data-id={{_id}}>SAVE ARTICLE</button>
            </div>
        </div>
        {{/each}}
    </div>
</section>

<!-- Modal -->
<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commentModalLabel">Comments</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="commentTitle">Title:</label>
                        <input type="text" name="title" class="form-control" id="commentTitle" aria-describedby="commentTitle">
                    </div>
                    <div class="form-group">
                        <label for="commentBody">Body:</label>
                        <textarea class="form-control" id="commentBody" name="body"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>